<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All proposed times
    </h1>

    <a href="/proposed_times/new" class="btn btn-block btn-outline-secondary">
      Add a new proposed time
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Start time
        </th>

        <th>
          End time
        </th>

        <th>
          Start date
        </th>

        <th>
          End date
        </th>

        <th>
          Meeting
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @proposed_times.each do |proposed_time| %>
      <tr>
        <td>
          <%= proposed_time.id %>
        </td>

        <td>
          <%= proposed_time.start_time %>
        </td>

        <td>
          <%= proposed_time.end_time %>
        </td>

        <td>
          <%= proposed_time.start_date %>
        </td>

        <td>
          <%= proposed_time.end_date %>
        </td>

        <td>
          <%= proposed_time.meeting_id %>
        </td>

        <td>
          <%= time_ago_in_words(proposed_time.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(proposed_time.updated_at) %> ago
        </td>

        <td>
          <a href="/proposed_times/<%= proposed_time.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
