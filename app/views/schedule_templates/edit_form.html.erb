<h1>
  Edit schedule #<%= @schedule.id %>
</h1>

<hr>

<form action="/update_schedule/<%= @schedule.id %>" method="post">

  <div class="form-group">
    <label for="owner_id">
      Owner
    </label>

    <input type="text" id="owner_id" name="owner_id" class="form-control" value="<%= @schedule.owner_id %>">
  </div>

  <div class="form-group">
    <label for="event_name">
      Event name
    </label>

    <input type="text" id="event_name" name="event_name" class="form-control" value="<%= @schedule.event_name %>">
  </div>

  <div class="form-group">
    <label for="event_cal">
      Event cal
    </label>

    <input type="text" id="event_cal" name="event_cal" class="form-control" value="<%= @schedule.event_cal %>">
  </div>

  <div class="form-group">
    <label for="start_time">
      Start time
    </label>

    <input type="text" id="start_time" name="start_time" class="form-control" value="<%= @schedule.start_time %>">
  </div>

  <div class="form-group">
    <label for="end_time">
      End time
    </label>

    <input type="text" id="end_time" name="end_time" class="form-control" value="<%= @schedule.end_time %>">
  </div>

  <div class="form-group">
    <label for="start_date">
      Start date
    </label>

    <input type="text" id="start_date" name="start_date" class="form-control" value="<%= @schedule.start_date %>">
  </div>

  <div class="form-group">
    <label for="end_date">
      End date
    </label>

    <input type="text" id="end_date" name="end_date" class="form-control" value="<%= @schedule.end_date %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update schedule
  </button>
</form>

<hr>

<a href="/schedules">
  Go back
</a>
