<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Schedule #<%= @schedule.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/schedules" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/schedules/<%= @schedule.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit schedule
        </a>
      </div>

      <div class="col">
        <a href="/delete_schedule/<%= @schedule.id %>" class="btn btn-block btn-outline-secondary">
          Delete schedule
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Owner
      </dt>
      <dd>
        <%= @schedule.owner_id %>
      </dd>

      <dt>
        Event name
      </dt>
      <dd>
        <%= @schedule.event_name %>
      </dd>

      <dt>
        Event cal
      </dt>
      <dd>
        <%= @schedule.event_cal %>
      </dd>

      <dt>
        Start time
      </dt>
      <dd>
        <%= @schedule.start_time %>
      </dd>

      <dt>
        End time
      </dt>
      <dd>
        <%= @schedule.end_time %>
      </dd>

      <dt>
        Start date
      </dt>
      <dd>
        <%= @schedule.start_date %>
      </dd>

      <dt>
        End date
      </dt>
      <dd>
        <%= @schedule.end_date %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@schedule.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@schedule.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

