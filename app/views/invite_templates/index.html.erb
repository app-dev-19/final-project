<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All invites
    </h1>

    <a href="/invites/new" class="btn btn-block btn-outline-secondary">
      Add a new invite
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Event
        </th>

        <th>
          Invitor
        </th>

        <th>
          Invite status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @invites.each do |invite| %>
      <tr>
        <td>
          <%= invite.id %>
        </td>

        <td>
          <%= invite.email %>
        </td>

        <td>
          <%= invite.event_id %>
        </td>

        <td>
          <%= invite.invitor_id %>
        </td>

        <td>
          <%= invite.invite_status %>
        </td>

        <td>
          <%= time_ago_in_words(invite.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(invite.updated_at) %> ago
        </td>

        <td>
          <a href="/invites/<%= invite.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
