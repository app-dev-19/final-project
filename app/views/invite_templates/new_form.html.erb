<h1>
  Add a new invite
</h1>


<hr>

<form action="/create_invite" method="post">

  <div class="form-group">
    <label for="email">
      Email
    </label>

    <input type="text" id="email" name="email" class="form-control">
  </div>

  <div class="form-group">
    <label for="event_id">
      Event
    </label>

    <input type="text" id="event_id" name="event_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="invitor_id">
      Invitor
    </label>

    <input type="text" id="invitor_id" name="invitor_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="invite_status">
      Invite status
    </label>

    <input type="text" id="invite_status" name="invite_status" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create invite
  </button>
</form>

<hr>

<a href="/invites">
  Go back
</a>
